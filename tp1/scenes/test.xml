<sxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="1" y="1" z="1" />
        </transformation>
        <transformation id="demoTransform2">
            <rotate axis="z" angle="-45" />
            <translate  x="1" y="1" z="1" />
            <translate  x="1" y="1" z="1" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="demoRectangle">
            <rectangle x1="-0.25" x2="0.25" y1="-0.25" y2="0.25"  />
        </primitive>
		<primitive id="demoCylinder">
            <cylinder height="2" radiusBottom="1" radiusTop="1" stacks="20" slices="20" />
        </primitive>
    </primitives>

    <components>
        <component id="demoRoot">
            <transformation>
                <rotate axis="x" angle="-90"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>                
                <componentref id="demoTest" />
            </children>
        </component>
        <component id="demoTest"> 
            <transformation>
                <rotate axis="y" angle="90" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>                
                <componentref id="demoTest2" />
            </children>
        </component>    
         <component id="demoTest2"> 
            <transformation>
                <transformationref id="demoTransform"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>                
                <primitiveref id="demoCylinder" />
            </children>
        </component> 
    </components>
</sxs>