<sxs>
    <scene root="root" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>    
    </transformations>

    <primitives>
        <primitive id="Rectangle">
            <rectangle x1="-2" x2="2" y1="-2" y2="2"  />
        </primitive>
		<primitive id="Cylinder">
            <cylinder height="2" radiusBottom="1" radiusTop="1" stacks="20" slices="30" />
        </primitive>
		<primitive id="demoTorus">
            <torus radiusInner="1" radiusOutter="2" slices="20" loops="10" />
        </primitive>
    </primitives>

    <components>
        <component id="root">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="composedTerrain1"/>
                <componentref id="composedTerrain2"/>
                <componentref id="composedTerrain3"/>
                <componentref id="composedTerrain4"/>
            </children>
        </component> 
        <component id="composedTerrain1"> 
            <transformation>
                <translate x="35" y="0" z="-35"/>
            </transformation>
            <children>            
                <componentref id="composedTerrain"/>
            </children>
        </component>
        <component id="composedTerrain2"> 
            <transformation>
                <translate x="-35" y="0" z="35"/>
                <rotate axis="y" angle="90"/>
            </transformation>
            <children>            
                <componentref id="composedTerrain"/>
            </children>
        </component>
        <component id="composedTerrain3"> 
            <transformation>
                <translate x="35" y="0" z="35"/>
                <rotate axis="y" angle="-90"/>
            </transformation>
            <children>            
                <componentref id="composedTerrain"/>
            </children>
        </component>
        <component id="composedTerrain4"> 
            <transformation>
                <translate x="-35" y="0" z="-35"/>
            </transformation>
            <children>            
                <componentref id="composedTerrain"/>
            </children>
        </component>
        <component id="composedTerrain">
            <transformation>
            </transformation>
            <children>            
                <componentref id="terrain1"/>
                <componentref id="terrain2"/>
                <componentref id="terrain3"/>
                <componentref id="terrain4"/>
            </children>
        </component>
        <component id="terrain1"> 
            <transformation>
                <translate x="20" y="0" z="-20"/>
            </transformation>
            <children>            
                <componentref id="terrain"/>
            </children>
        </component>
        <component id="terrain2"> 
            <transformation>
                <translate x="-20" y="0" z="20"/>
            </transformation>
            <children>            
                <componentref id="terrain"/>
            </children>
        </component>
        <component id="terrain3"> 
            <transformation>
                <translate x="20" y="0" z="20"/>
            </transformation>
            <children>            
                <componentref id="terrain"/>
            </children>
        </component>
        <component id="terrain4"> 
            <transformation>
                <translate x="-20" y="0" z="-20"/>
            </transformation>
            <children>            
                <componentref id="terrain"/>
            </children>
        </component>
        <component id="terrain"> 
            <transformation>
            </transformation>
            <children>            
                <componentref id="bigCylinder1"/>                
                <componentref id="bigCylinder2"/>                
                <componentref id="bigCylinder3"/>                
            </children>
        </component> 
        <component id="bigCylinder1"> 
            <transformation>
                <translate x="0" y="0" z="10" />
                <rotate axis="y" angle="33"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>                
                <componentref id="bigCylinder" />
            </children>
        </component>  
        <component id="bigCylinder2"> 
            <transformation>
                <rotate axis="y" angle="80"/>
                <translate x="0" y="0" z="12.5" />
                <rotate axis="y" angle="33"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>                
                <componentref id="bigCylinder" />
            </children>
        </component>  
        <component id="bigCylinder3"> 
            <transformation>
                <rotate axis="y" angle="201"/>
                <translate x="0" y="0" z="13" />
                <rotate axis="y" angle="112"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>                
                <componentref id="bigCylinder" />
            </children>
        </component> 
        <component id="bigCylinder">
            <transformation>
                <scale x="13" y="1.2" z="40"/>
                <translate x="0" y="0" z="-1"/>
            </transformation>
            <children>                
                <primitiveref id="Cylinder" />
            </children>
        </component>
        <component id="cactus">
            <transformation>
            </transformation>
            <children>                
                <componentref id="cactus_body"/>
                <componentref id="cactus_head"/>
            </children>
        </component>
        <!-- ToDo cactus -->
        <component id="cactus_head">
            <transformation>
                <scale x="0.5" y="2" z="10"/>
            </transformation>
            <children>                
                <primitiveref id="Cylinder"/>
            </children>
        </component>
        <component id="cactus_body">
            <transformation> 
                <translate x="0" y="7" z="0"/>
            </transformation>
            <children>                
                <primitiveref id="Rectangle"/>
            </children>
        </component>
    </components>
</sxs>