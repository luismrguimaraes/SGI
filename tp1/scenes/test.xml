<sxs>
    <scene root="root" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="z_translate">
            <translate x="0" y="0" z="6" />
        </transformation>
        <transformation id="z_translate_inverse">
            <translate x="0" y="0" z="-6" />
        </transformation>
        <transformation id="y_rotate">
            <rotate axis="y" angle="45" />
        </transformation>
        <transformation id="y_rotate_inverse">
            <rotate axis="y" angle="-45" />
        </transformation>
        <transformation id="x_rotate">
            <rotate axis="x" angle="90" />
        </transformation>        
        <transformation id="x_rotate_inverse">
            <rotate axis="x" angle="-90" />
        </transformation>        
    </transformations>

    <primitives>
        <primitive id="Rectangle">
            <rectangle x1="-500" x2="500" y1="-500" y2="500"  />
        </primitive>
		<primitive id="Cylinder">
            <cylinder height="2" radiusBottom="1" radiusTop="1" stacks="20" slices="30" />
        </primitive>
    </primitives>

    <components>
        <component id="root">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="terrain" />                
                
            </children>
        </component>
        <component id="base"> 
            <transformation>
                <transformationref id="x_rotate_inverse"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>                
                <primitiveref id="Rectangle" />
            </children>
        </component>    
        <component id="terrain"> 
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>            
                <componentref id="base" />
                <!-- componentref id="cylinder1" /-->
                <!-- componentref id="cylinder2" /-->
                <componentref id="cylinder3" />
                <componentref id="cylinder4" />
            </children>
        </component> 
        <component id="cylinder1"> 
            <transformation>
                <transformationref id="z_translate"/>
                <scale x="2" y="2" z="5" />
                <transformationref id="y_rotate"/>
                <transformationref id="y_rotate"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>                
                <primitiveref id="Cylinder" />
            </children>
        </component>  
        <component id="cylinder2"> 
            <transformation>
                <transformationref id="y_rotate" />
                <transformationref id="z_translate"/>
                <scale x="1" y="2" z="6" />
                <transformationref id="y_rotate"/>

            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>                
                <primitiveref id="Cylinder" />
            </children>
        </component>  
        <component id="cylinder3"> 
            <transformation>
                <transformationref id="y_rotate_inverse" />
                <transformationref id="z_translate"/>
                <scale x="2" y="2" z="6" />

            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>                
                <primitiveref id="Cylinder" />
            </children>
        </component> 
        <component id="cylinder4"> 
            <transformation>
                <transformationref id="y_rotate" />
                <transformationref id="z_translate"/>
                <scale x="2" y="3" z="9" />
                
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>                
                <primitiveref id="Cylinder" />
            </children>
        </component> 

        
    </components>
</sxs>